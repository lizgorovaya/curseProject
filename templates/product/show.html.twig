{% extends 'layout.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <br><br><br>
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.text }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ product.author }}</td>
            </tr>
            {% if product.category %}
            <tr>
                <th>Category</th>
                <td>{{ product.category.name | lower }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_product_index') }}" class="btn btn-success">back to list</a>
    {% else %}
        <a href="{{ path('app_user_product_index') }}" class="btn btn-success">back to list</a>
    {% endif %}


        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>


    {% if is_granted('ROLE_ADMIN') %}
    {{ include('product/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
